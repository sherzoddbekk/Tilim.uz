<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F7"
    android:layout_marginTop="10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_lotin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_radius">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="43.5dp"
                        android:textColor="@color/letter_color"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Lotin" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_change_writte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_direct" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_krill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_radius">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="43.5dp"
                        android:textColor="@color/letter_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Крилл" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/letter_bg_radius"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_listen_voice"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_microphone"/>

                        <ImageView
                            android:id="@+id/iv_voice_loud"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:padding="2dp"
                            android:layout_marginHorizontal="25dp"
                            android:src="@drawable/ic_speaker"/>

                        <ImageView
                            android:id="@+id/iv_letter_copy"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_copy"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_count_letter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/letter_color"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/5000"
                            android:textColor="@color/letter_color"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/iv_letter_cancel"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_cancel"
                            android:layout_marginLeft="25dp"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="300dp">

                    <EditText
                        android:id="@+id/et_write"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:singleLine="false"
                        android:gravity="start"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textStyle="normal"
                        android:textColor="@color/letter_color"
                        android:hint="Bu yerga yozing..."
                        android:layout_marginBottom="15dp"/>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/letter_bg_radius"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_voice_loud_krill"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginRight="25dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_speaker"/>

                        <ImageView
                            android:id="@+id/iv_letter_copy_krill"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_copy"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_dislike"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_dislike_dark"/>

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_like"
                            android:layout_marginLeft="25dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_come_word"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        android:textColor="@color/letter_color"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/la_voice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_rawRes="@raw/listen"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"/>



</FrameLayout>